{
  "extends": ["next", "prettier"],
  "rules": {
    "import/order": ["error", {
      "newlines-between": "always-and-inside-groups",
      "groups": [
        "builtin",
        "external",
        ["internal", "parent"],
        ["sibling", "index"]
      ]
    }],
    "import/no-useless-path-segments": ["error", {
      "noUselessIndex": true
    }],
    "no-extra-semi": 0,
    "semi": [2, "always"],
    "comma-dangle": [2, "always-multiline"],
    "react/prop-types": 0
  }
}